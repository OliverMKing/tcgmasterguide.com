generator client {
  provider   = "prisma-client-js"
  output     = "../src/generated/prisma"
  // Use TypeScript-based query engine (no Rust binaries) - smaller bundle, works better in serverless
  engineType = "client"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

// UserRole values: "USER" | "ADMIN" | "SUBSCRIBER"
model User {
  id                     String    @id @default(cuid())
  authId                 String    @unique @map("auth_id") // External auth provider ID (e.g., Clerk, Auth0)
  email                  String?   @unique
  name                   String?
  role                   String    @default("USER") // USER, ADMIN, SUBSCRIBER
  stripeCustomerId       String?   @map("stripe_customer_id")
  stripeSubscriptionId   String?   @map("stripe_subscription_id")
  stripeSubscriptionStatus String? @map("stripe_subscription_status") // active, canceled, past_due, etc.
  subscriptionEndsAt     DateTime? @map("subscription_ends_at")
  createdAt              DateTime  @default(now()) @map("created_at")
  updatedAt              DateTime  @updatedAt @map("updated_at")

  @@map("users")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  deckSlug  String?  @map("deck_slug") // null means "Other"
  deckTitle String?  @map("deck_title") // null means "Other"
  userId    String   @map("user_id")
  userName  String   @map("user_name")
  approved  Boolean  @default(false)
  parentId  String?  @map("parent_id") // null means top-level comment, set for replies
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  replies   Comment[] @relation("CommentReplies")

  @@index([deckSlug])
  @@index([userId])
  @@index([approved])
  @@index([parentId])
  @@map("comments")
}

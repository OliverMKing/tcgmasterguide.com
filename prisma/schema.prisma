generator client {
  provider      = "prisma-client-js"
  // "native" for local dev, "debian-openssl-3.0.x" for Azure Static Web Apps (really Azure functions) runtime
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

// UserRole values: "USER" | "ADMIN" | "SUBSCRIBER"
model User {
  id        String   @id @default(cuid())
  authId    String   @unique @map("auth_id") // External auth provider ID (e.g., Clerk, Auth0)
  email     String?  @unique
  name      String?
  role      String   @default("USER") // USER, ADMIN, SUBSCRIBER
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Comment {
  id        String    @id @default(cuid())
  content   String
  deckSlug  String?   @map("deck_slug") // null for Q&A page questions
  userId    String    @map("user_id")
  userName  String    @map("user_name")
  parentId  String?   @map("parent_id") // null for top-level comments, set for replies
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  replies   Comment[] @relation("CommentReplies")

  @@index([deckSlug])
  @@index([userId])
  @@index([parentId])
  @@map("comments")
}
